@model Marca
<form asp-action="Alterar" method="post">
    <fieldset>
        <legend>Alterar Marca</legend>
        <input type="hidden" asp-for="MarcaId" />
        <div class="form-group">
            <label>Id:</label>
            <input type="text" asp-for="MarcaId"
                   readonly="" class="form-control" />
        </div>
        <div class="form-group" id="Nome">
            <label>Nome:</label>
            <input type="text" asp-for="Nome"
                   class="form-control" />
        </div>
        <div class="form-group" id="Detalhes">
            <label>Detalhes:</label>
            <input type="text" asp-for="Detalhes"
                   class="form-control" />
        </div>
        <input type="submit" class="btn btn-success"
               value="Salvar" />
    </fieldset>
</form>
