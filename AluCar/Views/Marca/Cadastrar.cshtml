@model Marca
<form asp-action="Cadastrar" method="post" enctype="multipart/form-data">
    <fieldset>
        <legend>Cadastrar Marca</legend>
        <div asp-validation-summary="ModelOnly"
             class="text-primary"></div>
        <div class="form-group" id="Nome">
            <label asp-for="Nome"></label>
            <input type="text" asp-for="Nome"
                   class="form-control" />
            <span asp-validation-for="Nome"
                  class="text-primary"></span>
        </div>
        <div class="form-group" id="Placa">
            <label asp-for="Detalhes"></label>
            <input type="text" asp-for="Detalhes"
                   class="form-control" />
            <span asp-validation-for="Detalhes"
                  class="text-primary"></span>
        </div>
        <input type="submit" class="btn btn-success"
               value="Cadastrar" />
    </fieldset>
</form>