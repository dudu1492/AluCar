@inject Microsoft.AspNetCore.Identity.SignInManager<UsuarioLogado> SignManager
@inject Microsoft.AspNetCore.Identity.UserManager<UsuarioLogado> UserManager

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/css/bootstrap.css" rel="stylesheet" />
</head>
<body>
    @* Barra de navegação *@
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <a asp-action="Index" asp-controller="Home" class="navbar-brand" asp-route-id="">AluCar</a>
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link"
                   asp-action="Index"
                   asp-controller="Marca">
                    Marca
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link"
                   asp-action="Index"
                   asp-controller="Veiculo">
                    Veiculo
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link"
                   asp-action="Index"
                   asp-controller="Cliente">
                    Cliente
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link"
                   asp-action="Index"
                   asp-controller="Funcionario">
                    Funcionario
                </a>
            </li>
        </ul>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link"
                       asp-action="Alugar"
                       asp-controller="Home">Aluguel</a>
                </li>
                @if (SignManager.IsSignedIn(User))
                {
                    <li class="nav-item">
                        <a class="nav-link"
                           asp-action="Logout"
                           asp-controller="Funcionario">
                            Olá, @UserManager.GetUserName(User)
                            - Logout
                        </a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link"
                           asp-action="Login"
                           asp-controller="Funcionario">
                            Login
                        </a>
                    </li>
                }
            </ul>
    </nav>
    @* Conteúdo *@
    <div class="m-5">
        @RenderBody()
    </div>
    @* Rodapé *@
    <hr />
    <footer>
        <p style="text-align:center">
            &copy; @DateTime.Now.Year - Create By Eduardo Mariano
        </p>
    </footer>
</body>
</html>
