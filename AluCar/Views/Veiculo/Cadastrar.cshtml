@model Veiculo
<form asp-action="Cadastrar" method="post" enctype="multipart/form-data">
    <fieldset>
        <legend>Cadastrar Veiculo</legend>
        <div asp-validation-summary="ModelOnly"
             class="text-primary"></div>
        <div class="form-group" id="Nome">
            <label asp-for="Nome"></label>
            <input type="text" asp-for="Nome"
                   class="form-control" />
            <span asp-validation-for="Nome"
                  class="text-primary"></span>
        </div>
        <div class="form-group" id="Placa">
            <label asp-for="Placa"></label>
            <input type="text" asp-for="Placa"
                   class="form-control" />
            <span asp-validation-for="Placa"
                  class="text-primary"></span>
        </div>
        <div class="form-group" id="Ano">
            <label asp-for="Ano"></label>
            <input type="text" asp-for="Ano"
                   class="form-control" />
            <span asp-validation-for="Ano"
                  class="text-primary"></span>
        </div>
        <div id="Marca" class="form-group">
            <label>Marca:</label>
            <select asp-items="@ViewBag.Marcas"
                    class="form-control" name="drpMarcas">
                <option> -- SELECIONE -- </option>
            </select>
        </div>
        <div class="form-group" id="Potencia">
            <label asp-for="Potencia"></label>
            <input type="text" asp-for="Potencia"
                   class="form-control" />
            <span asp-validation-for="Potencia"
                  class="text-primary"></span>
        </div>
        <div class="form-group" id="Valor">
            <label asp-for="Valor"></label>
            <input type="text" asp-for="Valor"
                   class="form-control" />
            <span asp-validation-for="Valor"
                  class="text-primary"></span>
        </div>
        <div class="form-group" id="Imagem">
            <label>Imagem:</label><br />
            <input type="file" name="fupImagem" />
        </div>
        <input type="submit" class="btn btn-success"
               value="Cadastrar" />
    </fieldset>
</form>